package PrimeiroProjeto;

public class Lista18 {

	public static void main(String[] args) {
		
		Apresentacao();
		espaco();
		Exibindo_uma_frase();
		espaco();
		Mostrando_as_vogais();
		espaco();
		quadrado();
		espaco();
		par();
		espaco();
		triangulo();
		
	}
	public static void Apresentacao() {
		for(int e=0;e<=10;e++) {
			System.out.println("Via la ruvolucion");
		}
	}
	public static void espaco() {
		System.out.println("\n-----------------\n");
	}
	public static void Exibindo_uma_frase() {
		System.out.println("levante! a vida não pede te derrubar se você estiver no chão :D");
	}
	public static void Imprimindo_valores() {
		for(int e =1;e<=10;e++) {
			System.out.println(e);
		}
	}
	public static void Mostrando_as_vogais() {
		System.out.println("A E I O U");
	}
	public static void quadrado() {
		for(int e = 0;e < 5; e++) {
		System.out.println("**********");
		}
	}
	public static void par() {
		for(int e = 0;e <=20;e++) {
			if(e % 2 == 0) {
				System.out.println(e);
			}
		}
	}
	public static void regressiva() {
		for(int e = 10;e > 0;e++) {
			System.out.println(e);
		if(e = 1) {System.out.println("fim!");}
		}
	}
	public static void triangulo() {
//		double[][] teste = new double[5][5];
//		for(int e = 3; e <= 8 ;e++) {
//			for(int)
//			if(teste[e] == 3&& teste[e]%2==0) {
//				System.out.println("*");
//			}else {
//				System.out.println("-");
//			}
//		}
		for(int e = 0;e<=5;e++) {
			for(int t=0;t<e;t++) {
				System.out.print("*");
				
			}
			System.out.print("\n");
		}
	}
}
